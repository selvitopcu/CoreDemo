@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>

    @if (Model.Count() == 0)
    {
        <div class="media-body">
            <h5 style="color:gray">Hiç Yorum Yapılmamış!</h5>
            
            <p style="color:gray">İlk Yorumu Sen Yap</p>
        </div>
    }
    else
    {

        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>

                </div>
            </div>
        }
    }

</div>