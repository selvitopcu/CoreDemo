@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Message Detay Sayfası</h1>
<br />

@Html.Label("Mesaj ID")
@Html.TextBoxFor(x=>x.MessageID, new { @class = "form-control", disabled = "disabled" })
<br />
@Html.Label("Mesaj Başlığı")
@Html.TextBoxFor(x=>x.Subject, new { @class = "form-control",@readonly="readonly"})
<br />
@Html.Label("Mesaj İçeriği")
@Html.TextAreaFor(x=>x.MessageDetails,20,5, new {@class ="form-control" ,@readonly="readonly"})
<br />
<button class="btn btn-warning" href="/Message/">Geri Dön</button>

